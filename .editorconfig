# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[Dockerfile]
indent_style = tab

[*.php]
indent_size = 4

[composer.*]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[config/**/*.yaml]
indent_size = 4

[behat.{yml,yaml}{,.dist}]
indent_size = 4

[*.feature]
indent_size = 2

[.phpcs.xml]
indent_size = 4

[Caddyfile.*]
indent_style = tab
indent_size = 4
